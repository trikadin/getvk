{
    "manifest_version": 2,
    "name": "vk_nya",
    "description": "make vk.com more comfortable",
    "version": "1.0",
    "permissions": [
        "tabs",
        "*://*.vk.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.vk.com/*"
            ],
            "js": ["content.js"],
            "css": ["style.css"]
        }
    ]
}